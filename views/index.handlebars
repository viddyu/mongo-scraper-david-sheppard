<main class="mdl-layout__content">
    <section class="mdl-grid article_posts">

        {{#each articles}}

        <div class="wide-card mdl-card mdl-shadow--2dp mdl-cell mdl-cell--12-col">
          <div class="mdl-card__title">
            <h2 class="mdl-card__title-text">
                <a href="{{this.link}}" target="_blank">{{this.title}}</a>
            </h2>
          </div>

          <div class="mdl-card__supporting-text">
            {{this.snipText}}
          </div>

          <div class="mdl-card__actions mdl-card--border">

            <a class="mdl-button mdl-js-button mdl-js-ripple-effect showComment" data-id="{{this._id}}">
                    comments <i class="material-icons">arrow_drop_down</i></a>

          </div>
          <div class="comments">
        
            {{>comments/displayComment comments=this.comments}}
            {{!-- <div>{{this.comments}}</div> --}}

              
            {{!-- Allow user to leave comments               --}}
            <div class="mdl-card__actions mdl-card--border">
              <form>
                <div>Leave a comment:</div>
                <div class="mdl-textfield mdl-js-textfield">
                  <input class="mdl-textfield__input uname-input" type="text">
                  <label class="mdl-textfield__label" for="uname-input">your name</label>
                </div>
                <div class="mdl-textfield mdl-js-textfield">
                  <input class="mdl-textfield__input comment-input" type="text">
                  <label class="mdl-textfield__label" for="comment-input">say something...</label>
                </div>
                <button class="mdl-button mdl-js-button mdl-button--icon addComment" data-id="{{this._id}}">
                            <i class="material-icons grey">add</i>
                </button>

              </form>
            </div>

          </div> {{!--close Comment section--}}

        </div>
        {{/each}}


    
    </section>
</main>